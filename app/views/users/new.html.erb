  <div class="container">

  <h2>アカウント登録</h2>

  <%= form_tag "/users/create" do%>
    <div class="form-group">
      <label for="name">名前</label>
      <input type="text" placeholder="名前を入力してください" class="form-control" name="title">
    </div>

    <div class="form-group">
      <label for="email">メールアドレス</label>
      <input type="text" placeholder="メールアドレスを入力してください" class="form-control" name="email">
    </div>

    <div class="form-group">
      <label for="password">パスワード</label>
      <input type="text" placeholder="パスワードを入力してください" class="form-control" name="password">
    </div>

    <div class="form-group">
      <label for="password_confirmation">パスワード確認</label>
      <input type="text" placeholder="もう一度パスワードを入力してください" class="form-control" name="password_confirmation">
    </div>

    <button class="btn btn-outline-primary" type="submit">登録</button>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger mt-3">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success mt-3">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>