<div class="border rounded-lg overflow-hidden">
  <%= link_to "/articles/index" do %>
    <%# image_tag article.thumbnail_url,  class: "w-full h-48 object-cover" %>
    
    <div class="p-4">
      <h3 class="font-bold mb-2"><%= article.title %></h3>
      
      <div class="flex items-center text-sm text-gray-600 mb-2">
        <%# image_tag article.user.avatar_url, 
            class: "w-6 h-6 rounded-full mr-2" %>
        <span><%# article.user.name %></span>
        <span class="ml-2"><%= time_ago_in_words(article.created_at) %>Ââç</span>
      </div>
      
      <div class="flex items-center space-x-4">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          <%= article.likes_count %>
        </div>
        
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <%= article.comments_count %>
        </div>
      </div>
    </div>
  <% end %>
</div>