<div class="container mx-auto">
  <header class="flex items-center justify-between p-4 border-b">
    <%= link_to "/articles/index" , class: "text-2xl font-bold" do %>
      IT
    <% end %>
    
    <div class="flex-1 max-w-xl mx-4">
      <%= form_with url: "/articles/search", method: :get, local: true do |f| %>
        <%= f.text_field :q, 
            placeholder: "キーワードやクリエイターで検索",
            class: "w-full px-4 py-2 border rounded-lg" %>
      <% end %>
    </div>
    
    <div class="space-x-2">
      <%= link_to "ログイン", "/articles/login" , class: "px-4 py-2 text-gray-600" %>
      <%= link_to "会員登録", "/articles/signup" ,
          class: "px-4 py-2 text-white bg-green-600 rounded-lg hover:bg-green-700" %>
    </div>
  </header>

  <div class="flex">
    <aside class="w-64 p-4">
      <nav>
        <ul class="space-y-2">
          <% @categories.each do |category| %>
            <li>
              <%= link_to category.name,
                  category_path(category),
                  class: "block px-4 py-2 rounded-lg hover:bg-gray-100" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </aside>

    <main class="flex-1 p-4">
      <section class="mb-8">
        <h2 class="text-xl font-bold mb-4">今日の注目記事</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <%= render partial: "/articles/article_card", 
                     collection: @featured_articles, 
                     as: :article %>
        </div>
      </section>
    </main>
  </div>
</div>