
<div class="container my-4">
  <!-- ヘッダー -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= link_to "I T", "/articles/mockup" %></h1>

    <!-- 検索フォーム -->
    <%= form_tag "/articles/search", class:"d-flex w-50" do %>
      <input type="text" class="form-control me-2" placeholder="キーワードやクリエイターで検索" name="keyword">
      <button class="btn btn-outline-primary" type="submit">検索</button>
    <% end %>

    <div>
      <% if user_signed_in? %>
        <button type="button" class="btn dropdown-toggle border-white text-white" id="dropdownMenu" data-bs-toggle="dropdown" data-bs-offset="-50, 0" aria-expaneded="false">
          <%= image_tag "default_icon.png", class:"rounded-circle", alt:"メニュー", size:"48x48"%>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu">
          <li class="p-4 border-b">
            <p class="font-bold text-sm"><%= current_user.username %></p>
            <p class="text-xs text-gray-500">クリエイターページ</p>
          </li>
          <li><%= button_to '自分の記事', root_path, method: :get, class:"btn btn-light w-100" %></li>
          <li><%= button_to 'スキした記事', root_path, method: :get, class:"btn btn-light w-100" %></li>
          <li><%= button_to 'ログアウト', destroy_user_session_path, method: :destroy, class:"btn btn-light w-100" %></li>
        </ul>
          

        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <!-- ログイン・登録ボタン -->
        <%= link_to "会員登録", new_user_registration_path, class: "btn btn-outline-success" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <div class="row">
    <!-- サイドバー -->
    <div class="col-3">
      <ul class="list-group">
        <li class="list-group-item "><span class="text-muted">つかう</span></li>
        <li class="list-group-item"><%= link_to 'つくる', "/articles/write" %></li>
        <li class="list-group-item"><span class="text-muted">みる</span></li>
        <li class="list-group-item"><span class="text-muted">おきにいり</span></li>
      </ul>
    </div>

    <!-- 記事作成 -->
    <div class="col-9">
      <h3 class="mb-3">記事の作成</h3>
      <%= form_tag "/articles/create", method: "post" do %>
        <label for="title">タイトル</label>
        <input type="text" class="form-control me-2" name="title">
        <label for="content">コンテンツ</label>
        <input type="text" class="form-control me-2" name="content">
        <button class="btn btn-outline-primary" type="submit">作成</button>
      <% end %>

    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

